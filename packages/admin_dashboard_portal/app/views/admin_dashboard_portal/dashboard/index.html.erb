<div class="container mx-auto p-4">
  <div class="flex items-center justify-between mb-6">
    <h5
      class="mb-2 text-3xl font-extrabold leading-none tracking-tight
        text-gray-900 md:text-4xl dark:text-white"
    >
      Hackathon Dashboard
    </h5>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% registered_resources.each do |resource| %>
      <%
        next unless allowed_to?(:index?, resource) &&
        ['Team', 'Invitation', 'Hacker'].include?(resource.model_name.human)
      %>
      <div
        class="bg-white dark:bg-gray-800 shadow-md rounded-lg overflow-hidden"
      >
        <div class="p-4">
          <% icon_style = "dark:stroke-white w-24 h-24" %>
          <div class="flex items-center space-x-2 mb-2 hover:animate-pulse">
            <% if resource.model_name.human == 'Team' %>
              <%= render Phlex::TablerIcons::UsersGroup.new(class: icon_style) %>
            <% elsif resource.model_name.human == 'Invitation' %>
              <%= render Phlex::TablerIcons::Mail.new(class: icon_style) %>
            <% elsif resource.model_name.human == "Hacker" %>
              <%= render Phlex::TablerIcons::UserCog.new(class: icon_style) %>
            <% end %>
            <a
              href="<%= resource_url_for(resource, parent: nil) %>"
              class="text-2xl font-medium text-gray-900 dark:text-white truncate hover:underline"
            >
              <%= resource.model_name.human.pluralize %>
            </a>
          </div>
          <div class="mt-2 text-xl font-semibold text-gray-900 dark:text-white">
            <%= authorized_resource_scope(resource)&.count %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

          function addToCalendar() {
            const icsContent = [
              'BEGIN:VCALENDAR',
              'VERSION:2.0',
              'BEGIN:VEVENT',
              'DTSTART:20250314T190000',
              'DTEND:20250316T140000',
              'SUMMARY:Hack! with achieve by Petra',

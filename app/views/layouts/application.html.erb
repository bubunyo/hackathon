<%# app/views/layouts/application.html.erb %>
<!DOCTYPE html>
<html lang="en">
  <% app_name = 'Hack! with Achieve by Petra!' %>
  <head>
    <title><%= content_for(:title) || app_name %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="mobile-web-app-capable" content="yes" />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= yield :head %>
    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>
    <%= favicon_link_tag 'favicon.webp' %>
    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, 'data-turbo-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbo-track': 'reload', type: 'module' %>
    <%= stylesheet_link_tag 'application', 'data-turbo-track': 'reload' %>
  </head>
  
  <body class="min-h-screen bg-gradient-to-b from-indigo-50/50 to-white">
    <header class="sticky inset-x-0 top-0 z-50 backdrop-blur-sm bg-white/80 border-b border-gray-100">
      <nav class="flex items-center justify-between p-4 lg:px-8 max-w-7xl mx-auto" aria-label="Global">
        <div class="flex lg:flex-1">
          <a href="<%= root_path %>" class="group">
            <span class="sr-only"><%= app_name %></span>
            <h1 class="text-xl font-bold tracking-tight text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 to-indigo-800 group-hover:from-indigo-500 group-hover:to-indigo-700 transition-all">
              <%= app_name %>
            </h1>
          </a>
        </div>

        <%# Desktop Navigation %>
        <div class="hidden lg:flex lg:gap-x-12">
          <a href="<%= root_path %>" class="text-sm font-medium text-gray-900 hover:text-indigo-600 transition-colors">Home</a>
          <a href="<%= about_path %>" class="text-sm font-medium text-gray-900 hover:text-indigo-600 transition-colors">About</a>
          <a href="<%= rodauth(:hacker).create_account_path %>" class="text-sm font-medium text-gray-900 hover:text-indigo-600 transition-colors">Register</a>
        </div>

        <div class="hidden lg:flex lg:flex-1 lg:justify-end">
          <a href="<%= rodauth(:hacker).login_path %>" 
             class="text-sm font-medium text-indigo-600 hover:text-indigo-500 transition-colors">
            Sign in <span aria-hidden="true" class="ml-1">â†’</span>
          </a>
        </div>

        <%# Mobile menu button %>
        <div class="flex lg:hidden" data-controller="mobile-menu">
          <button data-action="mobile-menu#open" type="button" 
                  class="inline-flex items-center justify-center rounded-md p-2.5 text-gray-700 hover:bg-gray-50 transition-colors">
            <span class="sr-only">Open main menu</span>
            <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            </svg>
          </button>
        </div>

        <%# Mobile menu panel %>
        <div class="lg:hidden" role="dialog" aria-modal="true" 
             data-controller="mobile-menu" 
             data-mobile-menu-target="menu" 
             id="menu">
          <div class="fixed inset-0 z-50 bg-black/20 backdrop-blur-sm" 
               data-action="click->mobile-menu#close"></div>
          <div class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm">
            <div class="flex items-center justify-between">
              <a href="<%= root_path %>" class="-m-1.5 p-1.5">
                <span class="sr-only"><%= app_name %></span>
                <h1 class="text-xl font-bold tracking-tight text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 to-indigo-800">
                  <%= app_name %>
                </h1>
              </a>
              <button type="button" 
                      class="-m-2.5 rounded-md p-2.5 text-gray-700"
                      data-action="mobile-menu#close">
                <span class="sr-only">Close menu</span>
                <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>
            </div>
            <div class="mt-6 flow-root">
              <div class="-my-6 divide-y divide-gray-500/10">
                <div class="space-y-2 py-6">
                  <a href="<%= root_path %>" 
                     class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold text-gray-900 hover:bg-gray-50">
                    Home
                  </a>
                  <a href="<%= about_path %>" 
                     class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold text-gray-900 hover:bg-gray-50">
                    About
                  </a>
                  <a href="<%= rodauth(:hacker).create_account_path %>" 
                     class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold text-gray-900 hover:bg-gray-50">
                    Register
                  </a>
                </div>
                <div class="py-6">
                  <a href="<%= rodauth(:hacker).login_path %>" 
                     class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold text-indigo-600 hover:bg-gray-50">
                    Sign in
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <%# Flash messages %>
      <% if flash[:alert] %>
        <div class="fixed left-1/2 transform -translate-x-1/2 top-4 w-full max-w-md z-50">
          <div class="mx-4 bg-white rounded-lg shadow-lg border border-red-100 p-4">
            <div class="flex items-center justify-between gap-2">
              <p class="text-sm font-medium text-red-700"><%= flash[:alert] %></p>
              <button onclick="this.parentElement.parentElement.remove()" 
                      class="text-gray-400 hover:text-gray-600">
                <span class="sr-only">Dismiss</span>
                <svg class="size-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      <% end %>

      <%= yield %>
    </main>

    <footer class="mt-32 bg-gray-900">
      <div class="mx-auto max-w-7xl px-6 py-12 md:flex md:items-center md:justify-between lg:px-8">
        <div class="flex justify-center space-x-6 md:order-2">
          <a href="https://x.com/theachieveapp" class="text-gray-400 hover:text-gray-300" target="_blank">
            <span class="sr-only">Twitter</span>
            <svg class="size-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
            </svg>
          </a>
        </div>
        <div class="mt-8 md:order-1 md:mt-0">
          <p class="text-center text-xs leading-5 text-gray-400">
            &copy; 2025 Achieve by Petra. All rights reserved.
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
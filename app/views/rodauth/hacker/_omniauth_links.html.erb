<h1
  class="
    text-lg  leading-tight tracking-tight text-gray-900 md:text-xl
    dark:text-white text-center
  "
>
  Continue with
</h1>
<div class="flex justify-center gap-4">
  <div>
    <%= button_to  rodauth.omniauth_request_path(:github),
  method: :post,
  data: {
    turbo: false,
  },
  class:
  "w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-semibold rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" do %>
      <div class="flex gap-2 justify-center items-center">
        <%= render Phlex::TablerIcons::BrandGithub %>
        <p>GitHub</p>
      </div>
    <% end %>
  </div>
  <div>
    <%= button_to  rodauth.omniauth_request_path(:google),
  method: :post,
  data: {
    turbo: false,
  },
  class:
  "w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-semibold rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" do %>
      <div class="flex gap-2 justify-center items-center">
        <%= render Phlex::TablerIcons::BrandGoogle %>
        <p>Google</p>
      </div>
    <% end %>
  </div>
</div>
